{
  "setup": {
    "php": {
      "version": "8.3",
      "extensions": [
        "ctype",
        "curl",
        "dom",
        "fileinfo",
        "filter",
        "hash",
        "mbstring",
        "openssl",
        "pcre",
        "pdo",
        "session",
        "tokenizer",
        "xml",
        "pdo_mysql",
        "bcmath",
        "gd",
        "gmp"
      ]
    },
    "node": {
      "version": "22"
    }
  },
  "build": {
    "prebuild": [
      "install-php-extensions bcmath gd gmp",
      "echo '✔ Extensões PHP instaladas antes do Composer!'"
    ],
    "postbuild": [
      "chmod -R a+rw storage bootstrap/cache",
      "echo '✔ Permissões ajustadas e build finalizado'"
    ],
    "env": {
      "APP_ENV": "production"
    }
  }
}
